<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsConditionsActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/termsBack"
        app:tint="@color/black"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/covid_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/termsImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/termsText2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/termsImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="#80000000"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:id="@+id/termsText3"
        android:layout_below="@id/termsText2" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/termsWebView"
        android:layout_below="@id/termsText3"
        android:layout_marginTop="15dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="15dp"/>

</RelativeLayout>