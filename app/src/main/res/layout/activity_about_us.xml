<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:id="@+id/aboutUsRelative"
    android:background="@color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/aboutUsBack"
        app:tint="@color/black"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/covid_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/aboutUsImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/aboutUsText2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutUsImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="#80000000"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:id="@+id/aboutUsText3"
        android:layout_below="@id/aboutUsText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:id="@+id/aboutUsText4"
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutUsText3" />

    <TextView
        android:id="@+id/aboutUsText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutUsText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autoLink="email"
        android:focusable="true"
        android:text="@string/author_email"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="18dp" />

</RelativeLayout>